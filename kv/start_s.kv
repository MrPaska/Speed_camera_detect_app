MDScreen:
    name: "start_sec"
    MDFloatLayout:
        md_bg_color: rgba(255, 255, 255, 255)
        MDLabel:
            text: "D E T E C T I O N  A P P"
            font_size: "12sp"
            pos_hint:{"center_x": .55, "center_y": .95}
            #halign: "left"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "S v e i k i !"
            font_size: "23sp"
            pos_hint:{"center_y": .38}
            halign: "center"
            color: rgba(34, 34, 34, 255)
        MDLabel:
            text: "Įnovativus greičio matuoklių aptikimas"
            font_size: "13sp"
            size_hint_x: .85
            pos_hint:{"center_x": .5, "center_y": .3}
            halign: "center"
            color: rgba(127, 127, 127, 255)
        MDFlatButton:
            text:"Prisijungimas"
            size_hint: .66, .065
            pos_hint: {"center_x": 0.5, "center_y": .18}
            background_color: 0, 0, 1, 1
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "login"
            canvas.before:
                RoundedRectangle:
                    size: self.size
                    pos: self.pos
                    radius: [5]
        MDFlatButton:
            text:"Registracija"
            size_hint: .66, .065
            pos_hint: {"center_x": 0.5, "center_y": .09}
            background_color: 0, 0, 0, 0
            color: rgba(52, 0, 231, 255)
            on_release:
                root.manager.transition.direction = "left"
                root.manager.current = "reg"
            canvas.before:
                Color:
                    rgb: rgba(52, 0, 231, 255)
                Line:
                    width: 1.2
                    rounded_rectangle: self.x, self.y, self.width, self.height, 5, 5, 5, 5, 100
